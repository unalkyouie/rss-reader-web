{
  "compilerOptions": {
    "baseUrl": "./",
    "paths":{
      "~/components/*":["src/components/*"],
      "~/features/*":["src/components/features/*","src/features/*"],
      "~/hooks/*":["src/hooks/*"],
      "~/utils/*":["src/utils/*"],
      "~/mocks/*":["./__mocks__/*"],
      "~/*": ["src/*"]
    },
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "es2020"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true, 
    "jsx": "react-jsx",
    "types": ["react", "react-dom", "jest", "@testing-library/jest-dom"]
  },
  "include": [
    "src"
, "__mocks__"  ]
}
